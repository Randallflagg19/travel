NODE_ENV=development
PORT=3000
# comma-separated list; empty means CORS is disabled (fine for server-to-server or local testing)
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Neon (pooled) connection string
DATABASE_URL=postgresql://USER:PASSWORD@HOST-pooler.neon.tech/DB?sslmode=require

# Run DB migrations on app start (recommended for MVP, single instance)
DB_MIGRATE_ON_START=true

# JWT
JWT_SECRET=change-me-in-render-env
